@model IEnumerable<COMP2084_Assignment_02.Models.Professor>

@{
    ViewData["Title"] = "Index";
}

<h1>Professors</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PROFESSOR_NAME)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SEX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EMAIL_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.COURSE_ID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PROFESSOR_NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SEX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMAIL_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.COURSE_ID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PROFESSOR_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PROFESSOR_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PROFESSOR_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
